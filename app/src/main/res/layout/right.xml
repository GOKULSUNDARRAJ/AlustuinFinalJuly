<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/messageLayout"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rv"
        android:layout_marginRight="110dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/messagetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="@drawable/background_left"
            android:padding="15dp"
            android:text="His message"
            android:textColor="@color/black"
            android:textSize="16dp"></TextView>

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/messageImage"
            android:layout_width="250dp"
            android:layout_height="350dp"
            android:background="@drawable/background_left"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/defe"
            tools:ignore="MissingConstraints"></com.zolad.zoominimageview.ZoomInImageView>

        <TextView
            android:id="@+id/timetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messagetv"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="14/2/32 - 05:56pm"
            android:textColor="@color/black"
            android:textSize="12sp"></TextView>


    </RelativeLayout>


    <TextView
        android:id="@+id/isseentv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="9dp"
        android:gravity="end"
        android:text="delivered"
        android:textAlignment="textEnd"
        android:textColor="@color/blue"></TextView>


</RelativeLayout>



